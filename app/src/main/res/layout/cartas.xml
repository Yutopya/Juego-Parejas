<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card1_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="ababa"
            android:onClick="select"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card1_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card1_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card1_4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            app:srcCompat="@drawable/cover" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/card2_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            android:visibility="visible"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card2_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            android:visibility="visible"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card2_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            android:visibility="visible"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card2_4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            android:visibility="visible"
            app:srcCompat="@drawable/cover" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card3_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card3_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card3_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/card3_4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="select"
            app:srcCompat="@drawable/cover" />
    </LinearLayout>
</LinearLayout>